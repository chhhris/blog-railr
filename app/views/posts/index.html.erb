<% @posts.each do |post| %>
<br/>
  <ul style="list-style: none;">
    <li>
      <h2><%= link_to post.title, post %></h2>
    </li>
    <li>
      <br/>
      <h4><%= post.content %></h4>
    </li>
    <li>
      <%= link_to 'Edit', edit_post_path(post) %> | 
      <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
    <br/>
  </ul>
<% end %>